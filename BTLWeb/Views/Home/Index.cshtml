@using System.Web.UI.WebControls
@model List<BTLWeb.Models.Data.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var disCount = ViewBag.DisCount;
    var categories = ViewBag.Categories;
}

<div class="latest-product__text">
    <div style="margin-bottom: 30px">
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in categories)
                {
                    <div class="carousel-item active" data-interval="10000">
                        <img src="@Url.Content("~/Content/img/categories/" + item.Image)" class="d-block w-100" alt="...">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <h4>Top Rated Products</h4>
    <div class="row" style="margin-left: 30px;">
        @foreach (var item in Model)
        {
            <div class="product__item col-" style="margin-right: 10px; margin-bottom: 40px">
                <div class="product__item__pic set-bg" style="width: 180px; height: 200px;">
                    <ul class="product__item__pic__hover">
                        <img class="product__details__pic__item--large" src="@Url.Content("../../Content/img/products/" + item.Image)" alt="">
                        <li><a href="@Url.Action("ProductDetail", "Product", new {productId = item.Id})"><i class="fa fa-eye"></i></a></li>
                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                        <li><a href="@Url.Action("AddItem", "Cart", new { productId = item.Id, quantity = 1})"><i class="fa fa-shopping-cart"></i></a></li>
                    </ul>
                </div>

                <div class="product__item__text">
                    <h6><a href="#">@item.Name</a></h6>
                    <h5>@item.UnitPrice $</h5>
                </div>
            </div>
        }
    </div>
</div>

<div class="latest-product__text">
    <h4>Sale</h4>
    <div class="row" style="margin-left: 30px;">
        @foreach (var item in disCount)
        {
            <div class="product__item col-" style="margin-right: 10px; margin-bottom: 40px">
                <div class="product__item__pic set-bg" style="width: 170px; height: 200px;">
                    <ul class="product__item__pic__hover">
                        <img class="product__details__pic__item--large" src="@Url.Content("../../Content/img/products/" + item.Image)" alt="">
                        <li><a href="@Url.Action("ProductDetail", "Product", new {productId = item.Id})"><i class="fa fa-eye"></i></a></li>
                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                        <li><a href="@Url.Action("AddItem", "Cart", new { productId = item.Id, quantity = 1})"><i class="fa fa-shopping-cart" data-id ="@item.Id"></i></a></li>
                    </ul>
                </div>

                <div class="product__item__text">
                    <h6><a href="#">@item.Name</a></h6>
                    <h5>@item.UnitPrice $</h5>
                </div>
            </div>
        }
    </div>
</div>


