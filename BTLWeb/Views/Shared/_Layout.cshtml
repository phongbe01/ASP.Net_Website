<script src="~/Assets/custom/js/jquery-3.3.1.min.js"></script>
<script src="~/Assets/custom/js/bootstrap.min.js"></script>
<script src="~/Assets/custom/js/jquery.nice-select.min.js"></script>
<script src="~/Assets/custom/js/jquery-ui.min.js"></script>
<script src="~/Assets/custom/js/jquery.slicknav.js"></script>
<script src="~/Assets/custom/js/mixitup.min.js"></script>
<script src="~/Assets/custom/js/owl.carousel.min.js"></script>
<script src="~/Assets/custom/js/main.js"></script>
<script src="~/Content/cartController.js"></script>
